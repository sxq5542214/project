@import "../../lib/weui.wxss";

/**index.wxss**/
page{
    background: #00aaff;
/**    background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1580213775288&di=26aedef0cee3ad4586f0c5a5679d2867&imgtype=0&src=http%3A%2F%2Fs2.ifengimg.com%2F2018%2F01%2F12%2Fb94a3849b2c519bca8cc9b1b2baec1d3.jpg');
    */
    background-position:center;  /** 居中*/
    background-repeat:no-repeat;
    background-size:100% 100%;
    -moz-background-size:100% 100%;
}
.container{
    flex-wrap: wrap;
    font-family: '微软雅黑';
    height: 100%;
}
.col{
    width: 26%;
    padding-top: 33%;
    margin: 25rpx 3.666666%;
    position: relative;
}
.item{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    overflow: hidden;
    position: absolute;
    box-sizing: border-box;
    top: 0;
    display: flex;
    flex-direction: column;
}
.item .content{
    flex: 1;
}
.item .content,
.item .bottom{
    display: flex;
    flex-flow:row nowrap;
    align-items:center;
    justify-content:center;
}
.item .bottom{
    height: 80rpx;
    background: #9f7968;
    font-size: 22rpx;
    
}
.item .orange{
    display: flex;
    flex-flow:row nowrap;
    align-items:center;
    justify-content:center;
    height: 80rpx;
    background: #fff;
    font-size: 26rpx;
    color: black;
    border-top: 1rpx solid #00aaff;
}
.item  .txt{
    flex: 1;
    text-align: center;
}
.item .content .txt{
    padding: 0 5%;
    font-size: 28rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3; 
    display:box;
    box-orient:vertical;
    line-clamp:3;
}
.item .bottom .txt{
    color: #fff;
}
.item.notepad{
    background: #fff;
}
.item.today{
    background: #fde3d5;
}
.item.yesterday{
    background: #d5effd;
}
.add_box,
.item.more{
    border: 6rpx dotted #fff;
}
.add_box{
    display: flex;
    justify-content: center;
    align-items: center;
}
.tips_box{
    position: relative;
}
.tips_icon{
    position: absolute;
    top:-60rpx;
}
.item.more{
    background: url(../../images/more.png) no-repeat center center;
    background-size: 60%;
}
.tips{
    position: absolute;
    z-index: 9;
    right: -300rpx;
    bottom: -10rpx;
}
.tips_txt{
    width: 360rpx;
    font-size: 32rpx;
    padding: 15rpx 0;
    text-align: center;
    background: #fff;
    border-radius:14rpx; 
}
.tips_icon{
    width: 70rpx;
    height: 70rpx;
    margin-left: 30rpx;
    background-size:100%; 
}
.weui-cell:before {
content: " ";
position: absolute;
left: 0;
top: 0;
right: 0;
height: 0px;
border-top: 0rpx solid #D9D9D9;
color: #D9D9D9;

}
.log
{
  display: flex;
  flex-direction:row;
  width: 100%;
}
.selected
{
  font-size: 14px;
  color: rgb(102, 165, 112);
  width: 33%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 5rpx solid rgb(102, 165, 112);
}
.default
{
  font-size: 12px;
  margin: 0 auto;
  padding-top: 15px;
  padding-bottom: 15px;
}
