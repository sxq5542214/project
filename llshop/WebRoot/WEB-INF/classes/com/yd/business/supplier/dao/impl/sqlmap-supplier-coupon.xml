		receive_limit_num,coupon_count,begin_time,end_time,remark,coupon_backgroup,couponshow_product) values 
		(#{merchant_id},#{merchant_name},#{code},#{type},#{coupon_name},#{coupon_discount},#{coupon_offsetmoney},#{status},#{number},
		#{receive_limit_num},#{coupon_count},#{begin_time},#{end_time},#{remark},#{coupon_backgroup},#{couponshow_product})
