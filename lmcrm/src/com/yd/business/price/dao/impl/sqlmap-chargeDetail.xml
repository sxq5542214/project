			<if test="cd_basemoneyton3  != null ">cd_basemoneyton3  = #{cd_basemoneyton3 } ,</if>
		</set>
		where
			<if test="cd_id != null"> cd_id = #{cd_id}</if>
		
	</update>
</mapper>


